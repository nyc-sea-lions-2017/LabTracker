<br><br>

<% if !!@proposal %>
  <%= form_with(model: @comment, url: proposal_comments_path(@proposal), local: true) do |f| %>
    <%= f.text_area :body %>
    <%= f.hidden_field :commenter_id, value: @user.id %>
    <%= f.hidden_field :commentable_id, value: @proposal.id %>
    <%= f.hidden_field :commentable_type, value: "Proposal" %>
    <%= f.submit %>
    <% end %>
<% end %>