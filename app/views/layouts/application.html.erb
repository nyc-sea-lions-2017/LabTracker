<!DOCTYPE html>
<html>
  <head>
    <title>LabTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header role="banner" class="wrap-float">
      <div class="center wrap-float">
        <nav class="clearfix">
          <ul class="no-bullets no-margin no-padding right">
            <% if logged_in? %>
            <!-- logged_in? and other users helpers are temporarily living in the readme, until controllers/helpers/views are generated -->
              <li class=" left">|<a href='/users/<%= session[:user_id] %>/entries'><%= current_username %></a> | </li>
              <li class="left"><a href="/logout">log out</a> | </li>
            <% else %>
              <li class="left">|<a href="/users/new">register</a> | </li>
              <li class="left"><a href="/login">login</a> | </li>
            <% end %>
            <li class="left"><a href="/">home</a></li>
          </ul>
        </nav>
      </div>
    </header>


    <%= yield %>

  </body>
</html>
